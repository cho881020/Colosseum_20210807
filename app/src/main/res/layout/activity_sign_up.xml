<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/emailEdt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="이메일 양식으로 입력" />

        <Button
            android:id="@+id/emailCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복확인" />

    </LinearLayout>

    <TextView
        android:id="@+id/emailCheckResultTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="아이디 중복검사를 해주세요." />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/passwordEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="자유롭게 입력" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="사용할 닉네임" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nicknameEdt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="한글도 입력 가능"
            android:singleLine="true"/>

        <Button
            android:id="@+id/nicknameCheckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복확인" />

    </LinearLayout>

    <TextView
        android:id="@+id/nicknameCheckResultTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임 중복검사를 해주세요."
        android:layout_marginLeft="10dp"/>


    <Button
        android:id="@+id/okBtn"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="가입하기" />

</LinearLayout>